mixin storeCard(store={})
  .store
    .store__hero
      .store__actions
        .score__action.store__action--edit
          a(href=`/stores/${store._id}/edit`)
            - console.log(h.icon)
      img(src=`/uploads/${store.photo || 'store.png'}`)
      h2.title  
        a(href=`/store/${store.slug}`) #{store.name}
    .store__details
      p= store.description.split(' ').slice(0, 15).join(' ')
